# EditorConfig: https://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Javascript
[*.{js,py,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2

# Python
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

# Python
[*.sh]
charset = utf-8
indent_style = space
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Markdown
[*.{md,txt}]
indent_style = space
indent_size = 4
